﻿<div id="report-modal" class="modal" tabindex="-1" role="dialog" style="display:none; background-color:rgba(0,0,0,0.5)">
    <div class="report-modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-success"></h5>
                <button onclick="hideModalReport()" type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="report-form" method="post">
                    <div class="form-outline mb-4">
                        <label for="report-email" class="form-label">Nhập Email của bạn</label>
                        <input id="report-email" name="report-email" class="form-control" placeholder="Email" autocomplete="email" aria-required="true" />
                        <span id="report-email-error" class="text-danger"></span>
                    </div>
                    <div class="form-outline mb-4">
                        <label for="report-content" class="form-label">Nhập nội dung</label>
                        <input id="report-content" name="report-content" class="form-control" placeholder="Nội dung" autocomplete="content" aria-required="true" />
                        <span id="report-content-error" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button onclick="hideModalReport()" type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                <button id="report-modal-btn" type="button" class="btn btn-success">Gửi</button>
            </div>
        </div>
    </div>
</div>